pipeline {
    agent { 
        node {
            label 'agent1'
        }
    }
    stages {
        
        stage('Install Dependencies') {
            steps {
                echo "Installing Dependencies.."
                sh '''
                apk update
                apk add gcc musl-dev python3-dev
                pip3 install --upgrade pip
                pip3 install -r requirements.txt
                '''
            }
        }
        stage('Data Processing') {
            steps {
                echo "Building.."
                sh '''
                python3 datproc.py
                '''
            }
        }
        stage('Training') {
            steps {
                echo "Testing.."
                sh '''
                python3 training.py
                '''
            }
        }
    }
}