pipeline {
    agent { 
        node {
            label 'agent1'
        }
    }
    stages {
        
        stage('Install Dependencies') {
            steps {
                echo "Installing Dependencies.."
                sh '''
                python3 -m venv env
                . env/bin/activate
                pip install --upgrade pip
                pip install -r requirements.txt
                deactivate
                '''
            }
        }
        stage('Data Processing') {
            steps {
                echo "Building.."
                sh '''
                . env/bin/activate
                python datproc.py
                deactivate
                '''
            }
        }
        stage('Training') {
            steps {
                echo "Testing.."
                sh '''
                . env/bin/activate
                python training.py
                deactivate
                '''
            }
        }
    }
}