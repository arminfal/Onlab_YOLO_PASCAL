pipeline {
    agent { 
        node {
            label 'docker-yolo'
        }
    }
    stages {
        stage('Install Dependencies') {
            steps {
                echo "Installing Dependencies.."
                sh '''
                pip install -r requirements.txt
                '''
            }
        }
        stage('Data Processing') {
            steps {
                echo "Building.."
                sh '''
                python datproc.py
                '''
            }
        }
        stage('Training') {
            steps {
                echo "Testing.."
                sh '''
                python training.py
                '''
            }
        }
    }
}